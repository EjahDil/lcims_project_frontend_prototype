# Use Node.js as the base image
FROM node:22.9.0 AS build

# Set the working directory
WORKDIR /lcimsapp

# Copy dependency definitions
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the app's source code (including tsconfig.*.json, src/, etc.)
COPY . .

# Run the build
RUN npm run build

# Serve the built app using NGINX
FROM nginx:stable-alpine

# Copy the build output to NGINX's default HTML location
COPY --from=build /lcimsapp/dist /usr/share/nginx/html

# Expose port 8000 (you may need to also modify nginx.conf)
EXPOSE 8000

# Start nginx in the foreground
CMD ["nginx", "-g", "daemon off;"]